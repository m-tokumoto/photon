<div class="container">
	<div class="row">
		<div class="col"></div>
		<div class="col-mid-3">
			<% if flash[:alert] %>
				<div class="alert alert-danger">
					<%= flash.alert %>
				</div>
			<% end %>
			<h3>写真投稿フォーム</h3>

			<%= form_for(@photo) do |f| %>
						<p>写真の選択</p>
						<%= f.attachment_field :image %>

						<p>タグ</p>
						<%= f.text_field :tag_list, value: @photo.tag_list.join(','), "data-role" => "tagsinput", class: "form-control" %>

						<input type="button" onclick="submit();" value="投稿" />

			<% end %>
		</div>
		<div class="col"></div>
	</div>
</div>