<div class="container">
	<div class="row">
		<div class="col"></div>
		<div class="col-md-6">
			<h3>記事一覧</h3>
			<div class="list-group list-group">
				<% @articles.each do |article| %>
				    <%= link_to article_path(article),class: "list-group-item list-group-item-light list-group-item-action" do %>
				      <div class="d-flex w-100 justify-content-between">
					      <h4><%= article.title %></h4>
					      <small><%= article.user.name %>   <%= article.created_at.strftime('%Y年%m月%d日') %></small>
				  	  </div>
				    <% end %>
				<% end %>
			</div>
		</div>
		<div class="col"></div>
	</div>
</div>
